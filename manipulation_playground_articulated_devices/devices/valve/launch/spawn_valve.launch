<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <!-- Valve ID -->
  <arg name="valve_ID" default="0"/>

  <!-- Pose for Spawn -->
  <arg name="x" default="1.0"/>
  <arg name="y" default="0.5"/>
  <arg name="z" default="1.0"/>
  <arg name="R" default="1.5707"/>
  <arg name="P" default="0.0"/>
  <arg name="Y" default="0.0"/>

  <!-- Dynamic Properties -->
  <arg name="dynamics" default="normal"/>
  <arg name="continuous" default="true"/>

  <group ns="valve">
    <group ns="$(arg valve_ID)">

      <!-- Load valve description file -->
      <param name="robot_description" command="$(find xacro)/xacro $(find manipulation_playground_articulated_devices)/devices/valve/model/valve.urdf.xacro continuous:=$(arg continuous)"/>
      <param name="tf_prefix" value="valve/$(arg valve_ID)" />

      <!-- Spawn valve -->
      <node name="valve_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
      args="-urdf -param robot_description -model valve_$(arg valve_ID) -x $(arg x) -y $(arg y) -z $(arg z) -Y $(arg Y) -P $(arg P) -R $(arg R)"/>

      <!-- State publisher -->
      <node name="valve_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher">
        <param name="publish_frequency" value="100.0"/>
      </node>

      <!-- Controllers -->
      <rosparam file="$(find manipulation_playground_articulated_devices)/devices/valve/controllers/valve_controllers.yaml" command="load"/>
      
      <node name="valve_controllers_spawner" pkg="controller_manager" type="controller_manager"
      args="spawn valve_joint_state_controller valve_controller_$(arg dynamics)" respawn="false" output="screen"/>

      <node name="valve_controller_command_relay" pkg="topic_tools" type="relay" args="valve_controller/command valve_controller_$(arg dynamics)/command" />

      <!-- Transform broadcaster -->
      <node pkg="tf2_ros" type="static_transform_publisher" name="valve_broadcaster" args="$(arg x) $(arg y) $(arg z) $(arg Y) $(arg P) $(arg R) odom valve/$(arg valve_ID)/world"/>
    </group>
  </group>

</launch>