<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <!-- Gate Valve ID -->
  <arg name="gate_valve_ID" default="0"/>

  <!-- Pose for Spawn -->
  <arg name="x" default="1.0"/>
  <arg name="y" default="0.5"/>
  <arg name="z" default="1.0"/>
  <arg name="R" default="0.0"/>
  <arg name="P" default="0.0"/>
  <arg name="Y" default="0.0"/>

  <!-- Dynamic Properties -->
  <arg name="dynamics" default="none"/>
  <arg name="continuous" default="true"/>
  <arg name="lower_limit" default="-3.1415"/>
  <arg name="upper_limit" default="3.1415"/>

  <group ns="gate_valve">
    <group ns="$(arg gate_valve_ID)">

      <!-- Load gate_valve description file -->
      <param name="robot_description" command="$(find xacro)/xacro $(find manipulation_playground_articulated_devices)/devices/gate_valve/model/gate_valve.urdf.xacro continuous:=$(arg continuous) lower_limit:=$(arg lower_limit) upper_limit:=$(arg upper_limit)"/>
      <param name="tf_prefix" value="gate_valve/$(arg gate_valve_ID)" />

      <!-- Spawn gate_valve -->
      <node name="gate_valve_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
      args="-urdf -param robot_description -model gate_valve_$(arg gate_valve_ID) -x $(arg x) -y $(arg y) -z $(arg z) -Y $(arg Y) -P $(arg P) -R $(arg R)"/>

      <!-- State publisher -->
      <node name="gate_valve_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher">
        <param name="publish_frequency" value="100.0"/>
      </node>

      <!-- Controllers -->
      <rosparam file="$(find manipulation_playground_articulated_devices)/devices/gate_valve/controllers/gate_valve_controllers.yaml" command="load"/>
      
      <node name="gate_valve_controllers_spawner" pkg="controller_manager" type="controller_manager"
      args="spawn gate_valve_joint_state_controller gate_valve_controller_$(arg dynamics)" respawn="false" output="screen"/>

      <node name="gate_valve_controller_command_relay" pkg="topic_tools" type="relay" args="gate_valve_controller/command gate_valve_controller_$(arg dynamics)/command" />

      <!-- Transform broadcaster -->
      <node pkg="tf2_ros" type="static_transform_publisher" name="gate_valve_broadcaster" args="$(arg x) $(arg y) $(arg z) $(arg Y) $(arg P) $(arg R) odom gate_valve/$(arg gate_valve_ID)/world"/>
    </group>
  </group>

</launch>