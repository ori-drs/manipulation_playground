<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <!-- Needle Valve ID -->
  <arg name="needle_valve_ID" default="0"/>

  <!-- Pose for Spawn -->
  <arg name="x" default="1.0"/>
  <arg name="y" default="0.5"/>
  <arg name="z" default="1.0"/>
  <arg name="R" default="0.0"/>
  <arg name="P" default="0.0"/>
  <arg name="Y" default="0.0"/>

  <!-- Dynamic Properties -->
  <arg name="dynamics" default="none"/>

  <group ns="needle_valve">
    <group ns="$(arg needle_valve_ID)">

      <!-- Load needle_valve description file -->
      <param name="robot_description" command="$(find xacro)/xacro '$(find manipulation_playground_articulated_devices)/devices/needle_valve/model/needle_valve.urdf.xacro'"/>
      <param name="tf_prefix" value="needle_valve/$(arg needle_valve_ID)" />

      <!-- Spawn needle_valve -->
      <node name="needle_valve_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
      args="-urdf -param robot_description -model needle_valve -x $(arg x) -y $(arg y) -z $(arg z) -Y $(arg Y) -P $(arg P) -R $(arg R)"/>

      <!-- State publisher -->
      <node name="needle_valve_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher">
        <param name="publish_frequency" value="100.0"/>
      </node>

      <!-- Controllers -->
      <rosparam file="$(find manipulation_playground_articulated_devices)/devices/needle_valve/controllers/needle_valve_controllers.yaml" command="load"/>
      
      <group if="$(eval dynamics == 'none')">
        <node name="needle_valve_controllers_spawner" pkg="controller_manager" type="controller_manager"
        args="spawn needle_valve_joint_state_controller needle_valve_controller_none" respawn="false" output="screen"/>
      </group>

      <group if="$(eval dynamics == 'normal')">
        <node name="needle_valve_controllers_spawner" pkg="controller_manager" type="controller_manager"
        args="spawn needle_valve_joint_state_controller needle_valve_controller_normal" respawn="false" output="screen"/>
      </group>

      <group if="$(eval dynamics == 'stiff')">
        <node name="needle_valve_controllers_spawner" pkg="controller_manager" type="controller_manager"
        args="spawn needle_valve_joint_state_controller needle_valve_controller_stiff" respawn="false" output="screen"/>
      </group>

      <!-- Transform broadcaster -->
      <node pkg="tf2_ros" type="static_transform_publisher" name="needle_valve_broadcaster" args="$(arg x) $(arg y) $(arg z) $(arg Y) $(arg P) $(arg R) odom needle_valve/$(arg needle_valve_ID)/world"/>
    </group>
  </group>

</launch>