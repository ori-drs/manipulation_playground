<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <!-- Button ID -->
  <arg name="e_stop_button_ID" default="0"/>

  <!-- Pose for Spawn -->
  <arg name="x" default="1.0"/>
  <arg name="y" default="1.0"/>
  <arg name="z" default="1.0"/>
  <arg name="R" default="0.0"/>
  <arg name="P" default="1.5707"/>
  <arg name="Y" default="0.0"/>

  <!-- Dynamic Properties -->
  <arg name="dynamics" default="normal"/>
  <arg name="continuous" default="true"/> <!-- Not used -->
  <arg name="lower_limit" default="3.1415"/> <!-- Not used -->
  <arg name="upper_limit" default="-3.1415"/> <!-- Not used -->

  <group ns="e_stop_button">
    <group ns="$(arg e_stop_button_ID)">

      <!-- Load button description file -->
      <param name="robot_description" command="$(find xacro)/xacro '$(find manipulation_playground_articulated_devices)/devices/e_stop_button/model/e_stop_button.urdf.xacro'"/>
      <param name="tf_prefix" value="e_stop_button/$(arg e_stop_button_ID)" />

      <!-- Spawn button -->
      <node name="e_stop_button_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
      args="-urdf -param robot_description -model e_stop_button_$(arg e_stop_button_ID) -x $(arg x) -y $(arg y) -z $(arg z) -Y $(arg Y) -P $(arg P) -R $(arg R)"/>

      <!-- State publisher -->
      <node name="e_stop_button_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher">
        <param name="publish_frequency" value="100.0"/>
      </node>

      <!-- Controllers -->
      <rosparam file="$(find manipulation_playground_articulated_devices)/devices/e_stop_button/controllers/e_stop_button_controllers.yaml" command="load"/>
      
      <node name="e_stop_button_controllers_spawner" pkg="controller_manager" type="controller_manager"
      args="spawn e_stop_button_joint_state_controller e_stop_button_twist_controller e_stop_button_controller_$(arg dynamics)" respawn="false" output="screen"/>

      <!-- Actuation node -->
      <node pkg="manipulation_playground_articulated_devices" name="e_stop_button_actuation_node" type="e_stop_button_actuation_node.py" output="screen"/>

      <node name="e_stop_button_controller_command_relay" pkg="topic_tools" type="relay" args="e_stop_button_controller/command e_stop_button_controller_$(arg dynamics)/command" />

      <!-- Transform broadcaster -->
      <node pkg="tf2_ros" type="static_transform_publisher" name="e_stop_button_broadcaster" args="$(arg x) $(arg y) $(arg z) $(arg Y) $(arg P) $(arg R) odom e_stop_button/$(arg e_stop_button_ID)/world"/>
    </group>
  </group>

</launch>
